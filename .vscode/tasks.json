{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compose-up",
            "type": "shell",
            "command": "docker-compose down --volumes && docker-compose up --build -d",
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^(.*)$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^(.*Starting development server.*)$",
                    "endsPattern": "^(.*Attaching to.*)$"
                }
            }
        }
    ]
}